# ==========================================
# KubePolaris 环境变量配置
# ==========================================
# 使用方法:
#   cp .env.example .env
#   vim .env  # 修改以下配置项
# ==========================================

DB_DRIVER=mysql

# MySQL 配置
MYSQL_ROOT_PASSWORD=your-strong-root-password
MYSQL_PASSWORD=your-strong-password
MYSQL_PORT=3306

# 应用配置
JWT_SECRET=your-jwt-secret-key
LOG_LEVEL=info
# SERVER_MODE: debug | release
SERVER_MODE=release
# 应用对外暴露端口（映射到容器内 8080）
APP_PORT=8080

# Grafana 功能开关（连接地址和 API Key 请在系统设置 - 配置中心中配置）
GRAFANA_ENABLED=false
# 以下为 Docker Compose 内置 Grafana 的部署配置
GRAFANA_ADMIN_PASSWORD=your-grafana-password
GRAFANA_PORT=3000

# 版本
VERSION=latest
